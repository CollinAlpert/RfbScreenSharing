<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RfbScreenSharing.Client.ViewModels;assembly=RfbScreenSharing.Client"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RfbScreenSharing.Client.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ScreenViewer"
        Width="1000"
        Height="600">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="{Binding ImageSource}" Stretch="Fill" Grid.Row="0" />
        <Button Command="{Binding StartCommand}" Content="Start" Grid.Row="1" />
    </Grid>
</Window>